#include<stdio.h> // for stdin/stdout functions ( getchar and printf )


void whilespace_stdin(unsigned int * result);
inline void whilespace_stdin(unsigned int * result){
        *(result)+=1;
        while(getchar() == ' ');
}

unsigned int countSpace_stdin( void ){
    char ch;
    unsigned int result=0;
    while( ( ch = getchar() ) != '\n')
             ch == ' ' ? whilespace_stdin( &result ) : 0;
    return result;
}


void main(void){
        printf( "Count of space: %d\n", countSpace_stdin() );
}

